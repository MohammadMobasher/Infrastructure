@model  DataLayer.Entities.SlideShow
@{
    ViewData["Title"] = "ثبت اسلایدشو جدید";
    Layout = null;
}




<form action="/SlideShow/ManageSlideShow/Update" enctype="multipart/form-data" class="form-horizontal" method="post" style="">

    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Title" class="control-label col-sm-2">عنوان<i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <input type="text" value="@Model.Title" class="form-control" required="required" name="Title" aria-describedby="Title" placeholder="عنوان" />
        </div>
    </div>

    <div class="form-group">
        <label for="Alt" class="control-label col-sm-2">متن پیش‌فرض <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <input type="text" value="@Model.Alt" class="form-control" required="required" name="Alt" aria-describedby="Alt" placeholder="متن پیش‌فرض" />
        </div>
    </div>


    <div class="form-group">
        <label for="URL" class="control-label col-sm-2">آدرس <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.URL" required="required" name="URL" aria-describedby="URL" placeholder="آدرس" />
        </div>
    </div>



    <div class="form-group">
        <label for="Text" class="control-label col-sm-2">عکس  <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <input name="ImageFile"
                   required
                   data-default-file="/@Model.ImgAddress.Replace("wwwroot", "")"
                   type="file" class="dropify"
                   data-show-loader="true"
                   accept="image/gif, image/jpeg, image/png , image/bmp , image/jpg"
                   size="50">
            <input type="hidden" value="@Model.ImgAddress" name="ImgAddress" />
        </div>
    </div>



    <button type="submit" class="btn btn-block btn-success">ثبت</button>

    <script>
        $('.dropify').dropify({
            messages: {
                'default': 'Drag and drop a file here or click',
                'replace': 'لطفا فایل خود را اینجا رها کنید',
                'remove': 'حذف',
                'error': 'خطایی رخ داده است'
            }
        });

    </script>
</form>





