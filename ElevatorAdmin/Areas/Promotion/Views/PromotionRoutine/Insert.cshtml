@using Regate
@using DataLayer.SSOT
@using Microsoft.Extensions.Options;

@inject IOptions<FileConfig> fileConfig

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

<form class="form-horizontal" method="post" style="" enctype="multipart/form-data">

    <div class="form-group">
        <label for="StartToWork" class="control-label col-sm-3">تاریخ شروع به کار <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-9">
            <PersianDateTimePicker hastimepicker="false" required="true" name="StartToWork"></PersianDateTimePicker>
            @*<textarea class="form-control" required="required" name="StartToWork" aria-describedby="StartToWork" placeholder="تاریخ شروع به کار"></textarea>*@
        </div>
    </div>

    <div class="form-group">
        <label for="DeservedLastGrade" class="control-label col-sm-3">آخرین پایه استحقاقی <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-9">
            <input name="DeservedLastGrade" class="form-control" placeholder="آخرین پایه استحقاقی" aria-describedby="DeservedLastGrade" required="required" />
        </div>
    </div>

    <div class="form-group">
        <label for="SacrificeLastGrade" class="control-label col-sm-3">آخرین پایه ایثارگری <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-9">
            <input class="form-control" required="required" name="SacrificeLastGrade" aria-describedby="SacrificeLastGrade" placeholder="آخرین پایه ایثارگری" />
        </div>
    </div>

    <div class="form-group">
        <label for="IncentivesLastGrade" class="control-label col-sm-3">آخرین پایه تشویقی <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-9">
            <input class="form-control" required="required" name="IncentivesLastGrade" aria-describedby="IncentivesLastGrade" placeholder="آخرین پایه تشویقی" />
        </div>
    </div>

    <div class="form-group">
        <label for="SentenceFile" class="control-label col-sm-3">فایل آخرین حکم کارگزینی <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-9">
            @Html.Raw(RegateJson.Build(
             name: "SentenceFile",
             hasFile:true,
             repositoryWebAddress:fileConfig.Value.WebAddress
            ))

            @*@Html.Raw(RegateFile.Build("SentenceFile", isRequired: true))*@
        </div>
    </div>


    <div class="form-group">
        <label for="WorkingHoursFile" class="control-label col-sm-3">بارگزاری ساعات کارکرد <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-9">
            @Html.Raw(RegateFile.Build("WorkingHoursFile", isRequired: true))
        </div>
    </div>



    <button type="submit" class="btn btn-block btn-success">ثبت</button>



</form>

