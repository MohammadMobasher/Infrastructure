@model IEnumerable<DataLayer.DTO.UserDTO.RoleManageDTO>

@{
    ViewData["Title"] = "لیست نقش ها";
}

<style>
    table, th, td {
        text-align: center;
    }
</style>

<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 btn-table">

    <TableBotton controller="RoleManage" action="Create"
                 title="ثبت"
                 icon="fa-plus"
                 buttonClass="btn-primary"></TableBotton>

    <span class="hidden" data-role-table-btn-area-access="">
        <TableBotton controller="RoleManage" action="Edit"
                     title="ویرایش"
                     icon="fa-pencil-square-o"
                     buttonClass="btn-warning"></TableBotton>


        <TableBotton area="Routine" controller="ManageRoutineRole" action="ManageDashboardsToRole"
                     title="کارتابل‌ها"
                     icon="fa-pencil-square-o"
                     buttonClass="btn-warning"></TableBotton>

    </span>
</div>

<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
    <table class="table-first table-condensed table table-responsive tableWrap table-striped rounded table-hover table-bordered ">
        <thead>
            <tr>
                <th width="3%"></th>
                <th width="50px">
                    ردیف
                </th>
                <th>
                    عنوان نقش
                </th>
                <th>
                    نقش
                </th>

            </tr>
            <tr>
                <form method="post">
                    <th></th>
                    <th>---</th>
                    <th><input type="text" value="@ViewBag.SearchModel.RoleTitle" name="RoleTitle" class="form-control searchInput" /></th>
                    <th><input type="text" value="@ViewBag.SearchModel.Name" name="Name" class="form-control searchInput" /></th>
                    <input type="submit" class="hidden searchBtn" value="جستجو" />
                </form>
            </tr>
        </thead>
    </table>
    <div class="bodycontainer scrollable ">
        <table class="table-second table table-hover table-striped table-condensed table-bordered table-scrollable">
            <tbody>
                @{ var raw = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox" data-role-table-checkbox="@item.Id"></td>
                        <td>@(raw++)</td>
                        <td>@item.RoleTitle</td>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <table class="table table-hover table-striped">
        <tfoot>
            @Html.Partial("~/Views/Shared/_Pagination.cshtml")
        </tfoot>
    </table>
</div>
